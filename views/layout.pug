doctype html
html(lang="en")
  head
    title= title
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.css")
    link(rel='stylesheet' href='css/style.css')
    link(rel='shortcut icon' href='assets/img/favicon.ico' type='image/x-icon')
  body
    p#safari Your browser doesn't support WebRTC yet.</br></br>Please use the Chrome or Firefox desktop browsers.
    
    #app.hide
      // Top Header Bar
      .top-bar
        .brand
          h1.app-title Collaborative Editor
          span.subtitle Real-time Document Sharing
        .top-controls
          button#download(type='button')
            i(data-feather="download")
            span Save
          label#upload(for='file')
            i(data-feather="upload")
            span Upload
          input#file(type='file' accept='.txt, .js, .rb, .md')
      
      // Main Content Area
      .main-content
        // Left Sidebar - Connection Controls
        .sidebar
          .connection-panel
            h3.panel-title Connection
            
            .share-section
              label.section-label Your Peer ID
              .share-controls
                input#myLinkInput.link-input(type="text" readonly)
                button.copy-btn(data-tooltip="Copy Peer ID")
                  i(data-feather="copy")
                span.copy-status Copied!
            
            .connect-section
              label.section-label Connect to Peer
              .connect-controls
                input#peerIdInput.peer-input(type="text" placeholder="Enter Peer ID")
                button#connectBtn.connect-btn
                  i(data-feather="user-plus")
                  span Connect
                span.connect-status
            
            .peers-section
              h3.panel-title Active Peers
              #peerId.peers-list
        
        // Center - Editor
        .editor-container
          textarea(row='10' col='20')
      
      // Video Modal
      .video-modal.hide
        .video-bar
          i(data-feather="minus" class="minimize")
          i(data-feather='x' class="exit")
        video(autoplay playsinline controls)
    
    // Loading Screen
    .loading
      p Loading
      .sk-fading-circle
        .sk-circle1.sk-circle
        .sk-circle2.sk-circle
        .sk-circle3.sk-circle
        .sk-circle4.sk-circle
        .sk-circle5.sk-circle
        .sk-circle6.sk-circle
        .sk-circle7.sk-circle
        .sk-circle8.sk-circle
        .sk-circle9.sk-circle
        .sk-circle10.sk-circle
        .sk-circle11.sk-circle
        .sk-circle12.sk-circle
      p Application supports Chrome or Firefox desktop browsers.
      p <strong>Note:</strong> If loading takes longer than 10 seconds, please refresh the page.
    
    script(src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js")
    script.
      feather.replace({ 'stroke-width': 2 });
    block scripts
